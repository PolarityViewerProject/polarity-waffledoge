<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="false"
 follows="top|left"
 height="570"
 label="My Avatar"
 layout="topleft"
 left="0"
 name="script_limits_my_avatar_panel"
 top="0"
 width="480">
    <text
     type="string"
     length="1"
     follows="left|top"
     height="16"
     layout="topleft"
     left="3"
     name="memory_used"
     top_pad="10"
     width="250">
     Memory used: 9001 Ki
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="16"
     layout="topleft"
     left_delta="0"
     name="urls_used"
     top_pad="0"
     width="250">
      URLs used: 418
    </text>
    <button
     follows="top|left"
     height="19"
     label="Refresh List"
     layout="topleft"
     left_delta="1"
     name="refresh_list_btn"
     top_pad="0"
     width="80" />
    <scroll_list
     draw_heading="true"
     follows="all"
     height="500"
     layout="topleft"
     left_delta="-1"
     multi_select="true"
     name="scripts_list"
     text_color="TextDefaultColor"
     top_pad="5"
     width="478">
        <scroll_list.columns
         label="Limit (KB)"
         name="size"
         width="65" />
        <scroll_list.columns
         label="URLs"
         name="urls"
         width="30" />
        <scroll_list.columns
         label="Object Name"
         name="name"
         width="240" />
        <scroll_list.columns
         label="Location"
         name="location"/>
    </scroll_list>
    <text
     type="string"
     length="1"
     left_delta="5"
     follows="left|top"
     height="20"
     layout="topleft"
     name="loading_text"
     top_delta="30"
     text_color="EmphasisColor"
     width="130">
        Retrieving information...
    </text>
</panel>
