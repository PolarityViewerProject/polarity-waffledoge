<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="left|bottom|right|top"
 height="768"
 layout="topleft"
 left="0"
 name="login_progress_panel"
 top="768"
 width="1024">
    <layout_stack
     follows="left|right|top|bottom"
     height="768"
     layout="topleft"
     left="0"
     name="horizontal_centering"
     orientation="horizontal"
     top="0"
     width="1024">
        <layout_panel
         layout="topleft"
         min_width="10"
         name="left"
         width="150" />
        <layout_panel
         height="768"
         layout="topleft"
         min_width="670"
         name="center"
         width="670">
            <layout_stack
             follows="left|right|top|bottom"
             height="768"
             layout="topleft"
             left="0"
             orientation="vertical"
             name="vertical_centering"
             top="0"
             width="670">
                <layout_panel
                 height="200"
                 layout="topleft"
                 min_height="10"
                 name="panel3"
                 width="670" />
                <layout_panel
                 auto_resize="false"
                 height="250"
                 layout="topleft"
                 min_height="250"
                 name="panel4"
                 width="670">
                <icon
                 color="LoginProgressSquarePanelColor"
                 follows="left|right|bottom|top"
                 height="250"
                 image_name="Nametag_Rect"
                 layout="topleft"
                 left="0"
                 top="0"
                 width="670" />
<!--                     <text
                     follows="left|right|top"
                     font="SansSerifGigantic"
                     font_shadow="none"
                     halign="center"
                     height="20"
                     layout="topleft"
                     left_delta="47"
                     name="title_text"
                     text_color="LoginProgressTextColor"
                     top_delta="50"
                     right="-47"/> -->
                    <text
                     follows="left|right|top"
                     font="SansSerif"
                     font_shadow="none"
                     halign="center"
                     height="5"
                     layout="topleft"
                     left="30"
                     name="progress_text"
                     text_color="LoginProgressStatusColor"
                     top_delta="30"
                     word_wrap="true"/>
                     <loading_anim
                     color="EmphasisColor"
                     follows="left|right|top|bottom"
                     height="60"
                     left="80"
                     name="loading_anim_test"
                     number_sprites="72"
                     right="-30"
                     sprite_image="load_animation_sprite.png"
                     top_pad="20"/>
                    <progress_bar
                     color_bar="EmphasisColor"
                     follows="left|right|top"
                     height="8"
                     layout="topleft"
                     left="78"
                     name="login_progress_bar"
                     top_pad="10"
                     right="-85" />
                    <text
                     follows="left|right|top|bottom"
                     font="SansSerifLarge"
                     halign="center"
                     height="100"
                     layout="topleft"
                     left="50"
                     line_spacing.pixels="1"
                     name="message_text"
                     text_color="LoginProgressTextColor"
                     top_pad="20"
                     right="-50"
                     word_wrap="true"/>
                </layout_panel>
                <layout_panel
                 height="200"
                 layout="topleft"
                 min_width="10"
                 name="panel5"
                 width="670" />
            </layout_stack>
        </layout_panel>
        <layout_panel
         layout="topleft"
         min_width="10"
         name="right"
         width="150" />
    </layout_stack>
    <button
     follows="right|bottom"
     height="22"
     layout="topleft"
     left="-106"
     name="cancel_btn"
     top="700"
     width="90" />
 <web_browser
  follows="all"
  layout="topleft"
  left="0"
  name="login_media_panel"
  width="1024"
  height="768"
  top="0"/>
</panel>
