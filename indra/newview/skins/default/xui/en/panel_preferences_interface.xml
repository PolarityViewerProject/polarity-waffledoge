			<text
				left="5"
				top_pad="5"
				follows="left|top"
				height="12"
				name="SurfaceAreaThreshholdLabel"
				width="360">
				Texture Lag Protection (may break some objects):
			</text>
			<check_box
				top_pad="8"
				left="5"
				label="Automatically hide large objects with high texture area. Threshold: "
				control_name="PVRender_VolumeSAProtection"
				follows="left|top"
				height="16"
				name="PVRender_VolumeSAProtection"
				width="380"
				tool_tip="This protects you from objects with very large textures over large surface areas often designed to crash the viewer. Default is 5000 square meters, but if you find that some objects are not rendering and this option is enabled you may need to increase it." >
			</check_box>
			<spinner
				enabled_control="PVRender_VolumeSAProtection"
				top_delta="-5"
				control_name="PVRender_VolumeSAProtection"
				decimal_digits="0"
				layout="topleft"
				follows="left|top"
				height="18"
				left_pad="5"
				increment="1"
				initial_value="5000"
				max_val="10000"
				min_val="500"
				name="PVRender_VolumeSAProtection"
				width="90" >
			</spinner>
			<!-- Building and Scripting Bar -->
			<panel
				follows="left|top|right"
				height="22"
				bg_visible="true"
				bg_alpha_color="EmphasisColor_35"
				layout="topleft"
				mouse_opaque="false"
				left="1"
				name="build_ribbon"
				top_pad="10"
				width="515">
			<text
				name="build_features_text"
				follows="left|top"
				layout="topleft"
				top_pad="4"
				left="5"
				height="21"
				width="300">
				Building and Scripting
			</text>
		</panel>
			<button
				follows="left|top"
				height="25"
				label="Default Permissions"
				layout="topleft"
				name="fs_default_creation_permissions"
				left="8"
				top_pad="5"
				width="180">
				<button.commit_callback
					function="Pref.PermsDefault" >
				</button.commit_callback>
			</button>
		<check_box
			top_pad="3"
			left="5"
			follows="left|top"
			height="16"
			label="Always rez objects under the land group"
			name="grouplandrez"
			width="270"
			control_name="PVTools_RezUnderLandGroup"
			tool_tip="Attempts to rez objects under the land group if you're in the land group regardless of which current group tag you're wearing." >
		</check_box>
		<check_box
			control_name="EffectScriptChatParticles"
			height="16"
			label="Particle effects when scripts communicate"
			layout="topleft"
			name="EffectScriptChatParticles"
			tool_tip="If enabled scripted objects display swirling particle lights when the scripts communicate"
			initial_value="true"
			top_pad="3"
			width="350" >
		</check_box>
			<check_box
				top_pad="10"
				follows="left|top"
				height="16"
				left="5"
				label="Limit select distance (meters):"
				name="LimitSelectDistance"
				control_name="LimitSelectDistance"
				width="190" >
			</check_box>
			<spinner
				enabled_control="LimitSelectDistance"
				control_name="MaxSelectDistance"
				decimal_digits="3"
				top_delta="-5"
				left_pad="0"
				follows="left|top"
				height="16"
				increment="0.01"
				max_val="1024"
				min_val="0.001"
				name="MaxSelectDistance"
				width="75"
				tool_tip="Maximum allowed selection distance (meters from avatar) [Default: 128.000]" >
			</spinner>
			<check_box
				left="5"
				top_pad="13"
				follows="left|top"
				height="16"
				label="Limit drag distance (meters):"
				name="LimitDragDistance"
				control_name="LimitDragDistance"
				width="190" >
			</check_box>
			<spinner
				enabled_control="LimitDragDistance"
				control_name="MaxDragDistance"
				decimal_digits="3"
				top_delta="-5"
				left_pad="0"
				follows="left|top"
				height="16"
				increment="0.01"
				max_val="1024"
				min_val="0.001"
				name="MaxDragDistance"
				width="75"
				tool_tip="Maximum allowed distance in a single operation of move tool (meters from start point) [Default: 48.000]" >
			</spinner>
			<text
				left="8"
				top_pad="13"
				follows="left|top"
				height="16"
				name="RotationStepText1"
				width="192">
				Constrain rotations to multiples of
			</text>
			<spinner
				control_name="RotationStep"
				decimal_digits="2"
				top_delta="-5"
				left_pad="-5"
				follows="left|top"
				height="16"
				increment="0.01"
				max_val="359.99"
				min_val="0.01"
				name="RotationStep"
				width="65"
				tool_tip="All rotations via rotation tool are constrained to multiples of this unit [Default: 1.0]" >
			</spinner>
			<text
				left="8"
				top_pad="10"
				follows="left|top"
				height="16"
				name="RotationStepText2"
				width="270">
				degrees when not using 'snap to grid'
			</text>
		<!-- Windlight Bar -->
		<panel
			follows="left|top|right"
			height="22"
			bg_visible="true"
			bg_alpha_color="EmphasisColor_35"
			layout="topleft"
			mouse_opaque="false"
			left="1"
			name="build_ribbon"
			top_pad="5"
			width="298">
			<text
				name="build_features_text"
				follows="left|top"
				layout="topleft"
				top_pad="4"
				left="5"
				height="21"
				width="300">
				Windlight
			</text>
		</panel>
		<check_box
			top_pad="10"
			left="5"
			label="Always use Windlight from Parcel/Region"
			control_name="PVWindlight_FromRegionAlways"
			follows="left|top"
			height="16"
			name="PVWindlight_FromRegionAlways"
			width="256" >
		</check_box>
		<check_box
			top_pad="5"
			label="Crossfade Windlight for "
			control_name="PVWindlight_Interpolate"
			follows="left|top"
			height="16"
			name="PVWindlight_Interpolate"
			width="155"
			tool_tip="Creates a smooth transition between Windlight sky presets" >
		</check_box>
		<spinner
				control_name="PVWindlight_InterpolateTime"
				decimal_digits="1"
				follows="left|top"
				height="18"
				increment="0.1"
				initial_value="3.0"
				layout="topleft"
				left_pad="0"
				max_val="60"
				min_val="1.0"
				name="PVWindlight_InterpolateTime"
				top_delta="-5"
				width="50"
				tool_tip="The duration for crossfading from one preset to another [Default: 3]" >
			</spinner>
		<text
			top_delta="5"
			type="string"
			length="1"
			follows="left|top"
			height="15"
			layout="topleft"
			left_pad="5"
			name="wl_crossfade_label"
			width="185">
			 seconds
		</text>
		<check_box
			top_pad="5"
			label="Use Firestorm Parcel Windlight Sharing"
			control_name="PVWindLight_Parcel_Enabled"
			follows="left|top"
			left="5"
			height="16"
			name="PVWindLight_Parcel_Enabled"
			width="256" >
		</check_box>
		<check_box
			top_pad="5"
			left="5"
			label="Auto apply WL settings from friend's land"
			control_name="PVWindLight_Parcel_AutoApplyFromFriends"
			enabled_control="PVWindLight_Parcel_Enabled"
			follows="left|top"
			height="16"
			name="PVWindLight_Parcel_AutoApplyFromFriends"
			width="256" >
		</check_box>
		<check_box
			top_pad="5"
			label="Auto apply WL settings from my groups' land"
			control_name="PVWindLight_Parcel_AutoApplyFromGroups"
			enabled_control="PVWindLight_Parcel_Enabled"
			follows="left|top"
			height="16"
			name="PVWindLight_Parcel_AutoApplyFromGroups"
			width="256" >
		</check_box>
		<check_box
			top_pad="5"
			label="Auto apply WL settings from any parcel"
			control_name="PVWindLight_Parcel_AutoApplyFromAll"
			enabled_control="PVWindLight_Parcel_Enabled"
			follows="left|top"
			height="16"
			name="PVWindLight_Parcel_AutoApplyFromAll"
			width="256" >
		</check_box>
		</panel>
	</scroll_container>
</panel>
