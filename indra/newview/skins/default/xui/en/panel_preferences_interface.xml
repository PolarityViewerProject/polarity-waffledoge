<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
	follows="left|top|right|bottom"
	height="840"
	layout="topleft"
	left="0"
	label="Interface Settings"
	name="interface Panel"
	top="45"
	width="510">
	<scroll_container
		color="Transparent"
		follows="all"
		layout="topleft"
		mouse_opaque="false"
		left="0"
		name="interface_scroll"
		opaque="true"
		height="840"
		width="509"
		top="0">
		<panel
			layout="topleft"
			follows="left|top|right"
			height="820"
			name="interface_scroll_panel"
			top="0"
			mouse_opaque="false"
			left="0"
			width="495">
			<!-- Hover Tips -->
			<panel
				follows="left|top|right"
				height="22"
				bg_visible="true"
				bg_alpha_color="EmphasisColor_35"
				layout="topleft"
				mouse_opaque="false"
				left="1"
				name="hover_tips_ribbon"
				top="3"
				width="515">
				<check_box
					control_name="ShowHoverTips"
					height="16"
					initial_value="true"
					label="Show Hover Tips"
					layout="topleft"
					left="4"
					name="ShowHoverTips"
					tool_tip="Set this to show hover tips on avatars and some other things - set this one first (CTRL+SHIFT+T)"
					top_pad="4"
					width="256">
				</check_box>
			</panel>
			<check_box
				enabled_control="ShowHoverTips"
				control_name="ShowAllObjectHoverTip"
				height="16"
				initial_value="true"
				label="on All Objects"
				tool_tip="Set this to show hover tips on in-world objects"
				layout="topleft"
				left="5"
				name="ShowAllHoverTips"
				top_pad="5"
				width="175">
			</check_box>
			<check_box
				enabled_control="ShowHoverTips"
				control_name="ShowLandHoverTip"
				height="16"
				initial_value="true"
				label="on Land"
				tool_tip="Set this to show hover tips on land"
				layout="topleft"
				left_pad="10"
				name="ShowLandHoverTips"
				top_delta="0"
				width="256">
			</check_box>
			<check_box
				enabled="false"
				control_name="PVUI_HoverTipsAdvanced"
				name="PVUI_HoverTipsAdvanced"
				label="Show extended information"
				left="5"
				layout="topleft"
				top_pad="5"
				height="16"
				width="180">
			</check_box>
			<check_box
				enabled_control="ShowHoverTips"
				control_name="PVUI_HovertipShowGroupTitle"
				name="hovetip_group_title_checkbox"
				label="Include avatar group title"
				layout="topleft"
				left_pad="5"
				top_delta="0"
				height="16"
				width="350">
			</check_box>
			<!-- Inventory Features bar -->
			<panel
				follows="left|top|right"
				height="22"
				bg_visible="true"
				bg_alpha_color="EmphasisColor_35"
				layout="topleft"
				mouse_opaque="false"
				left="1"
				name="inventory_ribbon"
				top_pad="5"
				width="515">
				<text
					name="inventory_features_text"
					follows="left|top"
					layout="topleft"
					top_pad="4"
					left="5"
					height="21"
					width="300">
					Inventory features
				</text>
			</panel>
			<check_box
				top_pad="5"
				left="5"
				follows="left|top"
				height="16"
				label="Save scripts edited from inventory as Mono"
				tool_tip="When checked, editing a script directly from inventory and then saving it saves as Mono instead of LSL."
				name="PVInventory_SaveScriptsAsMono"
				control_name="PVInventory_SaveScriptsAsMono" >
			</check_box>
			<check_box
				control_name="InventoryLinking"
				follows="left|top"
				height="16"
				label="Enable &quot;Paste as Link&quot;"
				left_delta="0"
				name="inventory_linking"
				tool_tip="Enable ability to create links to folders and items via &quot;Paste as link.&quot;"
				top_pad="5"
				width="275">
			</check_box>
			<check_box
				follows="left|top"
				height="16"
				label="Hide empty system folders"
				tool_tip="Prevents visual clutter if you don't use the system folders to sort your inventory"
				left_delta="0"
				top_pad="5"
				name="hide_empty_folders"
				width="275"
				control_name="DebugHideEmptySystemFolders">
			</check_box>
			<!-- Status Bar -->
			<panel
				follows="left|top|right"
				height="22"
				bg_visible="true"
				bg_alpha_color="EmphasisColor_35"
				layout="topleft"
				mouse_opaque="false"
				left="1"
				name="status_bar_ribbon"
				top_pad="5"
				width="515">
				<text
					name="inventory_features_text"
					follows="left|top"
					layout="topleft"
					top_pad="4"
					left="5"
					height="21"
					width="300">
					Status Bar
				</text>
			</panel>
			<check_box
				follows="left|top"
				height="16"
				label="Show seconds in clock"
				left="5"
				top_pad="5"
				name="precise_clock"
				width="275"
				control_name="PVUI_ClockShowSeconds">
			</check_box>
			<!-- Title Bar -->
			<panel
				follows="left|top|right"
				height="22"
				bg_visible="true"
				bg_alpha_color="EmphasisColor_35"
				layout="topleft"
				mouse_opaque="false"
				left="1"
				name="status_bar_ribbon"
				top_pad="5"
				width="515">
				<text
					name="inventory_features_text"
					follows="left|top"
					layout="topleft"
					top_pad="4"
					left="5"
					height="21"
					width="300">
					Title Bar
				</text>
			</panel>
			<check_box
				control_name="PVWindow_TitleAnonymize"
				follows="left|top"
				height="16"
				label="Replace title with &quot;Second Life&quot;"
				left="5"
				name="anonymize_tiltle"
				top_pad="5"
				width="275">
			</check_box>
			<check_box
				control_name="PVWindow_TitleShowVersionNumber"
				disabled_control="PVWindow_TitleAnonymize"
				follows="left|top"
				height="16"
				label="Show channel and version number"
				left_delta="0"
				name="chow_vernum_in_title"
				top_pad="5"
				width="210">
			</check_box>
			<check_box
				control_name="PVWindow_TitleShowUserName"
				disabled_control="PVWindow_TitleAnonymize"
				follows="left|top"
				height="16"
				label="Show user name"
				left_pad="10"
				name="show_username_in_title"
				top_delta="0"
				width="275">
			</check_box>
			<!-- Protection Bar -->
			<panel
				follows="left|top|right"
				height="22"
				bg_visible="true"
				bg_alpha_color="EmphasisColor_35"
				layout="topleft"
				mouse_opaque="false"
				left="1"
				name="protection_ribbon"
				top_pad="5"
				width="515">
				<text
					name="inventory_features_text"
					follows="left|top"
					layout="topleft"
					top_pad="3"
					left="5"
					height="21"
					width="300">
					Protection
				</text>
			</panel>
			<check_box
				top_pad="10"
				left="5"
				label="Block left-click sitting on objects"
				control_name="PVSec_DisableClickToSit"
				follows="left|top"
				height="16"
				name="PVSec_DisableClickToSit"
				width="256" >
			</check_box>
			<check_box
				top_pad="4"
				label="Allow scripts to show map UI (llMapDestination)"
				control_name="ScriptsCanShowUI"
				follows="left|top"
				height="16"
				name="ScriptsCanShowUI"
				width="256" >
			</check_box>
<!-- 			<text
				top_pad="5"
				left="5"
				follows="left|top"
				height="12"
				name="revokepermissions_txt"
				width="200">
				Revoke Permissions:
			</text>
			<radio_group
				top_pad="5"
				left="5"
				height="62"
				layout="topleft"
				control_name="PVSec_RevokeObjectScriptPerms"
				name="PVSec_RevokeObjectScriptPerms"
