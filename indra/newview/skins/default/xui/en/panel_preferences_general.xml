<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="left|top|right|bottom"
 height="408"
 label="General"
 layout="topleft"
 left="0"
 name="general_panel"
 top="1"
 width="517">
   <text
     type="string"
     length="1"
     follows="left|top"
     height="22"
     valign="center"
     layout="topleft"
     left="5"
     name="language_textbox"
     top="5"
     width="185">
        Interface language:
    </text>
    <combo_box
     control_name="Language"
     follows="left|top"
     layout="topleft"
     left_pad="5"
     max_chars="135"
     name="language_combobox"
     width="200">
        <combo_box.item
         enabled="true"
         label="System default"
         name="System Default Language"
         value="default" />
        <combo_box.item
         enabled="true"
         label="English"
         name="English"
         value="en" />
        <combo_box.item
         enabled="true"
         label="Dansk (Danish) - Beta"
         name="Danish"
         value="da" />
        <combo_box.item
         enabled="true"
         label="Deutsch (German) - Beta"
         name="Deutsch(German)"
         value="de" />
        <combo_box.item
         enabled="true"
         label="Español (Spanish) - Beta"
         name="Spanish"
         value="es" />
        <combo_box.item
         enabled="true"
         label="Français (French) - Beta"
         name="French"
         value="fr" />
        <combo_box.item
         enabled="true"
         label="Italiano (Italian) - Beta"
         name="Italian"
         value="it" />
        <combo_box.item
         enabled="true"
         label="Polski (Polish) - Beta"
         name="Polish"
         value="pl" />
        <combo_box.item
         enabled="true"
         label="Português (Portuguese) - Beta"
         name="Portugese"
         value="pt" />
        <combo_box.item
         enabled="true"
         label="Русский (Russian) - Beta"
         name="Russian"
         value="ru" />
        <combo_box.item
         enabled="true"
         label="Türkçe (Turkish) - Beta"
         name="Turkish"
         value="tr" />
        <combo_box.item
         enabled="true"
         label="日本語 (Japanese) - Beta"
         name="(Japanese)"
         value="ja" />
        <combo_box.item
         enabled="true"
         label="正體中文 (Traditional Chinese) - Beta"
         name="Traditional Chinese"
         value="zh" />
    </combo_box>
    <text
     font="SansSerifSmall"
     type="string"
     text_color="White_50"
     length="1"
     follows="left|top"
     height="18"
     layout="topleft"
     left_pad="10"
     name="language_textbox2"
     width="100">
        (Requires restart)
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="22"
     layout="topleft"
     left="5"
     top_pad="10"
     name="maturity_desired_prompt"
     valign="center"
     width="185">
        I want to access content rated:
    </text>
    <combo_box
     control_name="PreferredMaturity"
     follows="left|top"
     height="23"
     top_delta="0"
     layout="topleft"
     left_pad="5"
     name="maturity_desired_combobox"
     width="200">
        <combo_box.item
         label="General, Moderate, Adult"
         name="Desired_Adult"
         value="42" />
        <combo_box.item
         label="General and Moderate"
         name="Desired_Mature"
         value="21" />
        <combo_box.item
         label="General"
         name="Desired_PG"
         value="13" />
        <combo_box.commit_callback
		 function="Pref.MaturitySettings"/>
    </combo_box>
    <icon
     follows="left|top"
     height="16"
     image_name="Parcel_PG_Dark"
     layout="topleft"
     left_pad="5"
     name="rating_icon_general"
     top_delta="3"
     width="18"/>
    <icon
     follows="left|top"
     height="16"
     image_name="Parcel_M_Dark"
     layout="topleft"
     left_pad="2"
     name="rating_icon_moderate"
     width="18"/>
    <icon
     follows="left|top"
     height="16"
     image_name="Parcel_R_Dark"
     layout="topleft"
     left_pad="2"
     name="rating_icon_adult"
     width="18"/>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="23"
     layout="topleft"
     left="5"
     name="start_location_textbox"
     top_pad="10"
     valign="center"
     width="185">
        Start location:
    </text>
    <combo_box
     control_name="LoginLocation"
     follows="left|top"
     height="23"
     layout="topleft"
     name="start_location_combo"
     top_delta="0"
     left_pad="5"
     width="200">
        <combo_box.item
         label="My Last Location"
         name="MyLastLocation"
         value="last" />
        <combo_box.item
         label="My Home"
         name="MyHome"
         value="home" />
    </combo_box>
    <check_box
     control_name="ShowStartLocation"
     initial_value="true"
     label="Show on login"
     height="22"
     layout="topleft"
     left_pad="5"
     name="show_location_checkbox"
     top_delta="0"
     width="256"
     tool_tip="" />
    <check_box
      control_name="ShowFavoritesOnLogin"
      enabled="false" 
      height="22"
      layout="topleft"
      label="Show favorites on login screen"
      left="5"
      name="favorites_on_login_check"
      top_pad="10"
      width="185" />
    <text
     type="string"
     length="1"
     follows="left|top"
     height="22"
     layout="topleft"
     left_pad="5"
     name="favorites_check_extra_text"
     top_delta="0"
     valign="center"
     width="400">
      (Others using this computer will also see them)
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="5"
     name="name_tags_textbox"
     top_pad="25"
     width="85">
        Name tags:
    </text>
    <radio_group
     control_name="AvatarNameTagMode"
      height="20"
      layout="topleft"
      left_pad="0"
      top_delta="0" 
      name="Name_Tag_Preference">
      <radio_item
       label="Off"
       name="radio"
       top_delta="20" 
       layout="topleft"
       height="16" 
       left="0" 
       value="0"
       width="90" />
      <radio_item
       label="On"
       left_pad="50"
       layout="topleft"
       top_delta="0" 
       height="16" 
       name="radio2"
       value="1"
       width="90" />
      <radio_item
       label="Show briefly"
       left_pad="45"
       name="radio3"
       height="16"
       layout="topleft"
       top_delta="0"
       value="2"
       width="160" />
    </radio_group>
    <check_box
     control_name="UseDisplayNames"
     follows="top|left"
     height="16"
     label="Display Names"
     layout="topleft"
     left="90"
     name="display_names_check"
     tool_tip="Check to use display names in chat, IM, name tags, etc."
     top_pad="3"
     width="130"/>
   <check_box
     control_name="NameTagShowUsernames"
     enabled_control="AvatarNameTagMode"
     height="16"
     label="Usernames"
     layout="topleft"
     left_pad="10"
     name="show_slids"
     tool_tip="Show username, like bobsmith123"
     top_delta="0"
     width="130"/>
    <check_box
     control_name="NameTagShowGroupTitles"
     enabled_control="AvatarNameTagMode"
     height="16"
     label="Group titles"
     layout="topleft"
     left_pad="5"
     name="show_all_title_checkbox1"
     tool_tip="Show group titles, like Officer or Member"
     top_delta="0"
     width="130" />
    <check_box
	 enabled_control="AvatarNameTagMode"
     control_name="RenderNameShowSelf"
     height="16"
     label="My name tag"
     left="90"
     name="show_my_name_checkbox1"
	 top_pad="5"
     width="130" />
    <check_box
     control_name="NameTagShowFriends"
     enabled_control="AvatarNameTagMode"
     height="16"
     label="Color my friends"
     layout="topleft"
     left_pad="10"
     name="show_friends"
     tool_tip="Highlight the name tags of your friends"
     top_delta="0"
     width="130" />     
    <check_box
     control_name="PVColorManager_LowPriorityFriendStatus"
     enabled_control="NameTagShowFriends"
     height="16"
     label="Special color first"
     layout="topleft"
     left_pad="5"
     name="show_friends"
     tool_tip="Special agent color will replace friend highlight"/>
     
    <text
     type="string"
	 length="1"
	 follows="left|top"
	 height="22"
	 layout="topleft"
	 left="5"
	 name="inworld_typing_rg_label"
	 top_pad="40"
     valign="center"
	 width="125">
       Pressing letter keys:
   </text>
   <radio_group
     control_name="LetterKeysFocusChatBar" 
     height="22"
     layout="topleft"
     left_pad="5"
     top_delta="0" 
     name="inworld_typing_preference"
     width="340">
        <radio_item
         label="Starts local chat"
         name="radio_start_chat"
         layout="topleft"
         height="16" 
         left="0" 
         value="1"
         width="115" />
        <radio_item
         label="Affects movement (i.e. WASD)"
         left_pad="5"
         layout="topleft"
         top_delta="0" 
         height="16" 
         name="radio_move"
         value="0"
         width="75" />
    </radio_group>
    
    <text
     type="string"
     length="1"
     follows="left|top"
     height="23"
     layout="topleft"
     left="5"
     name="title_afk_text"
     top_pad="20"
     valign="center" 
     width="107">
    	Away timeout:
    </text>
  <combo_box
     height="23"
     layout="topleft"
     control_name="AFKTimeout"
     left_pad="5"
     label="Away timeout:"
     top_delta="0"
     name="afk"
     width="130">
    <combo_box.item
     label="2 minutes"
     name="item0"
     value="120" />
    <combo_box.item
     label="5 minutes"
     name="item1"
     value="300" />
    <combo_box.item
     label="10 minutes"
     name="item2"
     value="600" />
    <combo_box.item
     label="30 minutes"
     name="item3"
     value="1800" />
    <combo_box.item
     label="never"
     name="item4"
     value="0" />
  </combo_box>
    <text
     bottom="-60"
     type="string"
     length="1"
     follows="left|top"
     height="13"
     layout="topleft"
     left="5"
     mouse_opaque="false"
     name="text_box3"
     width="240">
       Do Not Disturb response:
    </text>
    <text_editor
        bottom="-1"
        commit_on_focus_lost = "true"
        control_name="DoNotDisturbModeResponse"
        follows="left|top"
        height="50"
        layout="topleft"
        left="3"
        name="do_not_disturb_response"
        right="-1"
        use_ellipses="false"
        word_wrap="true">
       log_in_to_change
    </text_editor>

</panel>
