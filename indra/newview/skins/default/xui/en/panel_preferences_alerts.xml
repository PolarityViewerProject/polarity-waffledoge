<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 height="408"
 label="Popups"
 layout="topleft"
 left="0"
 name="popups"
 top="500"
 width="517">
    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="tell_me_label"
     top="10"
     width="300">
        Tell me:
    </text>
    <check_box
     control_name="NotifyMoneySpend"
     height="22"
     label="When I spend L$"
     layout="topleft"
     left_delta="5"
     name="notify_money_spend_checkbox"
     top_pad="4"
     valign="center"
     width="110" />
    <check_box
     control_name="NotifyMoneyReceived"
     height="22"
     label="When I get L$"
     layout="topleft"
     left_pad="5"
     top_delta="0"  
     name="notify_money_received_checkbox"     
     valign="center"
     width="95" />
    <text
     height="22"
     layout="topleft"
     left="250"
     top_delta="0"  
     label=""
     name="threshold_text"
     valign="center"
     width="65">
     Threshold
    </text>
    <spinner
     control_name="PVUI_BalanceNotificationThreshold"
     height="22"
     decimal_digits="0"
     layout="topleft"
     left_pad="5"
     top_delta="0"  
     name="notify_money_received_checkbox"     
     valign="center"
     width="70" />  
    <text
     height="22"
     layout="topleft"
     left_pad="2"
     top_delta="0"  
     label=""
     name="threshold_text"
     valign="center"
     width="65">
     L$
    </text> 
    <check_box
     control_name="ChatOnlineNotification"
     height="16"
     label="When my friends log in or out"
     layout="topleft"
     left="15"
     top_pad="5"
     name="friends_online_notify_checkbox"     
     width="85" />
    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="show_label"
     top_pad="8"
     width="450">
        Always show:
    </text>
    <scroll_list
     follows="top|left|right"
     height="140"
     layout="topleft"
     left="10"
     multi_select="true"
     name="enabled_popups"
     sort_column="0"
     sort_ascending="true" 
     width="495" />
	 <button
	 enabled_control="FirstSelectedDisabledPopups"
     follows="top|left"
     height="23"
     image_overlay="Arrow_Up"
     hover_glow_amount="0.15"
     layout="topleft"
     left="200"
     name="enable_this_popup"
     top_pad="5"
     width="40">
        <button.commit_callback
         function="Pref.ClickEnablePopup" />
    </button>
    <button
	 enabled_control="FirstSelectedEnabledPopups"
	 follows="top|left"
     height="23"
     image_overlay="Arrow_Down"
     hover_glow_amount="0.15"
     layout="topleft"
     left_pad="20"
     name="disable_this_popup"
     top_delta="0"
     width="40">
        <button.commit_callback
         function="Pref.ClickDisablePopup" />
    </button>
    <text
     type="string"
     length="1"
     follows="top|left"
     height="12"
     layout="topleft"
     left="10"
     name="dont_show_label"
     top_pad="-10"
     width="450">
        Never show:
    </text>
    <scroll_list
     follows="top|left|right"
     height="140"
     layout="topleft"
     left="10"
     sort_column="0"
     sort_ascending="true"
     multi_select="true"
     name="disabled_popups"
     width="495" />
</panel>
