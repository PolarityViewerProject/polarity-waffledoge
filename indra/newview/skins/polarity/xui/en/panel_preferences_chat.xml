<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
  height="408"
  label="Text Chat"
  layout="topleft"
  left="0"
  name="chat"
  top="1"
  width="517">
  <tab_container
    label="Chat Prefs"
    layout="topleft"
    follows="all"
    top="5"
    bottom="-1"
    left="0"
    right="-1"
    name="tabs"
    tab_min_width="50"
    tab_position="top" >
    <panel
      top_pad="1"
      bottom="-1"
      left="0"
      right="-1"
      follows="all"
      label="Behaviour"
      name="ChatBehaviour" >
      <check_box
        control_name="PlayTypingAnim"
        height="18"
        initial_value="true"
        label="Send my typing status to others"
        layout="topleft"
        left_delta="3"
        name="play_typing_animation"
        top_pad="5"
        width="330">
      </check_box>
      <check_box
        follows="left|top"
        control_name="UseChatBubbles"
        height="18"
        label="Show chat messages in name tag (Bubble Chat)"
        layout="topleft"
        top_pad="0"
        name="bubble_text_chat"
        width="330">
      </check_box>
      <check_box
        enabled="false"
        height="18"
        label="Email me IMs when I'm offline"
        layout="topleft"
        left_delta="0"
        name="send_im_to_email"
        top_pad="0"
        width="330">
      </check_box>
      <!-- Privacy/Protection -->
      <panel
        follows="left|top|right"
        height="22"
        bg_visible="true"
        bg_alpha_color="EmphasisColor_35"
        layout="topleft"
        mouse_opaque="false"
        left="1"
        name="privacy_ribbon"
        top_pad="5"
        width="515">
        <text
          name="privacy_ribbon_text"
          follows="left|top"
          layout="topleft"
          top_pad="4"
          left="5"
          height="21"
          width="300">
          Privacy and Protection
        </text>
      </panel>
      <check_box
       layout="topleft"
       follows="left|top"
       top_pad="5"
       width="30"
       height="18"
       name="PVChat_IgnoreAdHocEnabled"
       control_name="PVChat_IgnoreAdHocEnabled"
       label="Automatically ignore and leave all conference (ad-hoc) chats"/>
      <check_box
       layout="topleft"
       follows="left|top"
       left_delta="10"
       enabled_control="PVChat_IgnoreAdHocEnabled"
       top_pad="0"
       width="30"
       height="18"
       name="PVChat_IgnoreAdHocReport"
       control_name="PVChat_IgnoreAdHocReport"
       label="Report ignored conference chats in nearby chat"/>
      <check_box
       layout="topleft"
       follows="left|top"
       enabled_control="PVChat_IgnoreAdHocEnabled"
       top_pad="0"
       width="30"
       height="18"
       name="PVChat_IgnoreAdHocAllowFromFriends"
       control_name="PVChat_IgnoreAdHocAllowFromFriends"
       label="Allow conference chats invitations from my friends"/>
      <!-- Log settings -->
      <panel
        follows="left|top|right"
        height="22"
        bg_visible="true"
        bg_alpha_color="EmphasisColor_35"
        layout="topleft"
        mouse_opaque="false"
        left="1"
        name="logging_ribbon"
        top_pad="5"
        width="515">
        <text
          name="logging_ribbon_text"
          follows="left|top"
          layout="topleft"
          top_pad="4"
          left="5"
          height="21"
          width="300">
          Chat Logging
        </text>
      </panel>
      <text
        follows="left|top"
        height="12"
        layout="topleft"
        left_delta="0"
        name="logging_label"
        text_color="White"
        top_pad="5"
        width="55">
        Save:
      </text>
      <combo_box
        follows="left|top"
        enabled="false"
        control_name="KeepConversationLogTranscripts"
        height="23"
        layout="topleft"
        left_pad="0"
        name="conversation_log_combo"
        top_delta="0"
        width="165">
        <item
          name="log_and_transcripts"
          label="Log and transcripts"
          value="2">
        </item>
        <item
          name="log_only"
          label="Log only"
          value="1">
        </item>
        <item
          name="no_log_or_transcript"
          label="No log or transcripts"
          value="0">
        </item>
      </combo_box>
      <button
        follows="left|top"
        enabled="false"
        height="23"
        label="Clear log..."
        layout="topleft"
        left_pad="0"
        top_delta="0"
        name="clear_log"
        width="110">
        <commit_callback
          function="Pref.ClearLog" >
        </commit_callback>
      </button>
      <button
        follows="left|top"
        enabled="false"
        height="23"
        label="Delete transcripts..."
        layout="topleft"
        left_pad="0"
        top_delta="0"
        name="delete_transcripts"
        width="147">
        <button.commit_callback
          function="Pref.DeleteTranscripts" >
        </button.commit_callback>
      </button>
      <text
        follows="left|top"
        name="log_location_label"
        layout="topleft"
        left="2"
        text_color="White"
        height="12"
        top_pad="5"
        width="55">
        Location:
      </text>
      <line_editor
        follows="left|top"
        control_name="InstantMessageLogPath"
        border_style="line"
        border_thickness="1"
        font="SansSerif"
        height="23"
        layout="topleft"
        left_pad="0"
        name="log_path_string"
        top_delta="0"
        width="370">
      </line_editor>
      <button
        enabled="false"
        follows="left|top"
        height="23"
        label="Browse..."
        label_selected="Browse"
        layout="topleft"
        left_pad="0"
        name="log_path_button"
        top_delta="0"
        width="85">
        <commit_callback function="Pref.LogPath" >
        </commit_callback>
      </button>
      <!-- Translation/Autoreplace/Spellcheck -->
      <button
        bottom="0"
        height="23"
        label="Translation..."
        layout="bottomleft"
        left="9"
        name="ok_btn"
        width="170">
        <commit_callback
          function="Pref.TranslationSettings" >
        </commit_callback>
      </button>
      <button
        commit_callback.function="Pref.AutoReplace"
        height="23"
        label="Auto-Replace..."
        left_pad="5"
        name="autoreplace_showgui"
        bottom_delta="0"
        width="150">
      </button>
      <button
        commit_callback.function="Pref.SpellChecker"
        height="23"
        label="Spell Checking..."
        right="-1"
        name="spellcheck_showgui"
        bottom_delta="0"
        width="150">
      </button>
      <text
        follows="left|top"
        height="12"
        right="-102"
        layout="topleft"
        name="font_size"
        top="0"
        visible="true"
        width="60">
        Font size:
      </text>
      <combo_box
        follows="left|top"
        control_name="ChatFontSize"
        height="23"
        layout="topleft"
        left_pad="0"
        name="chat_font_size"
        top_delta="0"
        width="100">
        <item
          label="Monospace"
          name="Monospace"
          value="3" >
        </item>
        <item
          label="Small"
          name="Small"
          value="0">
        </item>
        <item
          label="Medium"
          name="Medium"
          value="1">
        </item>
        <item
          label="Large"
          name="Large"
          value="2">
        </item>
      </combo_box>
    </panel>
    <panel
      top_pad="1"
      bottom="-1"
      left="0"
      right="-1"
      follows="all"
      label="Notifications"
      name="ChatNotifications">
      <text
        follows="left|top"
        layout="topleft"
        height="12"
        name="friend_ims"
        width="130"
        left="5"
        top_pad="13">
        Friend IMs:
      </text>
      <combo_box
        control_name="NotificationFriendIMOptions"
        height="23"
        layout="topleft"
        left_pad="5"
        top_delta="-6"
        name="FriendIMOptions"
        width="260">
        <item
          label="Open Conversations window"
          name="OpenConversationsWindow"
          value="3">
        </item>
        <item
          label="Pop up the message"
          name="PopUpMessage"
          value="2">
        </item>
        <item
          label="Flash toolbar button"
          name="FlashToolbarButton"
          value="1">
        </item>
        <item
          label="No action"
          name="NoAction"
          value="0">
        </item>
      </combo_box>
      <check_box
        control_name="PlaySoundFriendIM"
        height="23"
        label="Play sound"
        layout="topleft"
        name="play_sound_friend_im"
        left_pad="7"
        top_delta="-3"
        width="28">
      </check_box>
      <text
        follows="left|top"
        layout="topleft"
        height="12"
        name="non_friend_ims"
        width="130"
        left="5"
        top_pad="11">
        Non-friend IMs:
      </text>
      <combo_box
        control_name="NotificationNonFriendIMOptions"
        height="23"
        layout="topleft"
        left_pad="5"
        top_delta="-6"
        name="NonFriendIMOptions"
        width="260">
        <item
          label="Open Conversations window"
          name="OpenConversationsWindow"
          value="3">
        </item>
        <item
          label="Pop up the message"
          name="PopUpMessage"
          value="2">
        </item>
        <item
          label="Flash toolbar button"
          name="FlashToolbarButton"
          value="1">
        </item>
        <item
          label="No action"
          name="NoAction"
          value="0">
        </item>
      </combo_box>
      <check_box
        control_name="PlaySoundNonFriendIM"
        height="23"
        label="Play sound"
        layout="topleft"
        name="play_sound_non_friend_im"
        left_pad="7"
        top_delta="-3"
        width="28">
      </check_box>
      <text
        follows="left|top"
        layout="topleft"
        left="5"
        height="13"
        name="conference_ims"
        width="130"
        top_pad="11">
        Conference IMs:
      </text>
      <combo_box
        control_name="NotificationConferenceIMOptions"
        height="23"
        layout="topleft"
        left_pad="5"
        top_delta="-6"
        name="ConferenceIMOptions"
        width="260">
        <item
          label="Open Conversations window"
          name="OpenConversationsWindow"
          value="3">
        </item>
        <item
          label="Pop up the message"
          name="PopUpMessage"
          value="2">
        </item>
        <item
          label="Flash toolbar button"
          name="FlashToolbarButton"
          value="1">
        </item>
        <item
          label="No action"
          name="NoAction"
          value="0">
        </item>
      </combo_box>
      <check_box
        control_name="PlaySoundConferenceIM"
        height="23"
        label="Play sound"
        layout="topleft"
        name="play_sound_conference_im"
        left_pad="7"
        top_delta="-3"
        width="28">
      </check_box>
      <text
        follows="left|top"
        layout="topleft"
        left="5"
        height="13"
        name="group_chat"
        width="130"
        top_pad="11">
        Group chat:
      </text>
      <combo_box
        control_name="NotificationGroupChatOptions"
        height="23"
        layout="topleft"
        left_pad="5"
        top_delta="-6"
        name="GroupChatOptions"
        width="260">
        <item
          label="Open Conversations window"
          name="OpenConversationsWindow"
          value="3">
        </item>
        <item
          label="Pop up the message"
          name="PopUpMessage"
          value="2">
        </item>
        <item
          label="Flash toolbar button"
          name="FlashToolbarButton"
          value="1">
        </item>
        <item
          label="No action"
          name="NoAction"
          value="0">
        </item>
      </combo_box>
      <check_box
        control_name="PlaySoundGroupChatIM"
        height="23"
        label="Play sound"
        layout="topleft"
        name="play_sound_group_chat_im"
        left_pad="7"
        top_delta="-3"
        width="28">
      </check_box>
      <text
        follows="left|top"
        layout="topleft"
        left="5"
        height="12"
        name="nearby_chat"
        width="130"
        top_pad="11">
        Nearby chat:
      </text>
      <combo_box
        control_name="NotificationNearbyChatOptions"
        height="23"
        layout="topleft"
        left_pad="5"
        top_delta="-6"
        name="NearbyChatOptions"
        width="260">
        <item
          label="Open Conversations window"
          name="OpenConversationsWindow"
          value="3">
        </item>
        <item
          label="Pop up the message"
          name="PopUpMessage"
          value="2">
        </item>
        <item
          label="Flash toolbar button"
          name="FlashToolBarButton"
          value="1">
        </item>
        <item
          label="No action"
          name="NoAction"
          value="0">
        </item>
      </combo_box>
      <check_box
        control_name="PlaySoundNearbyChatIM"
        height="23"
        label="Play sound"
        layout="topleft"
        name="play_sound_nearby_chat_im"
        left_pad="7"
        top_delta="-3"
        width="28">
      </check_box>
      <text
        follows="left|top"
        layout="topleft"
        left="5"
        height="12"
        name="object_ims"
        width="130"
        top_pad="11">
        Object IMs:
      </text>
      <combo_box
        control_name="NotificationObjectIMOptions"
        height="23"
        layout="topleft"
        left_pad="5"
        top_delta="-6"
        name="ObjectIMOptions"
        width="260">
        <item
          label="Open Conversations window"
          name="OpenConversationsWindow"
          value="3">
        </item>
        <item
          label="Pop up the message"
          name="PopUpMessage"
          value="2">
        </item>
        <item
          label="Flash toolbar button"
          name="FlashToolBarButton"
          value="1">
        </item>
        <item
          label="No action"
          name="NoAction"
          value="0">
        </item>
      </combo_box>
      <check_box
        control_name="PlaySoundObjectIM"
        height="23"
        label="Play sound"
        layout="topleft"
        name="play_sound_object_im"
        left_pad="7"
        top_delta="-3"
        width="28">
      </check_box>
      <text
        follows="left|top"
        layout="topleft"
        left="5"
        name="play_sound"
        width="100"
        top_pad="8"
        visible="true">
        Play sound:
      </text>
      <check_box
        control_name="PlaySoundNewConversation"
        height="16"
        label="New conversation"
        layout="topleft"
        left_pad="32"
        top_pad="-10"
        name="new_conversation"
        width="150" >
      </check_box>
      <check_box
        control_name="PlaySoundIncomingVoiceCall"
        height="16"
        label="Incoming voice call"
        layout="topleft"
        top_pad="6"
        name="incoming_voice_call"
        width="150" >
      </check_box>
      <check_box
        control_name="PlaySoundTeleportOffer"
        label="Teleport offer"
        name="teleport_offer"
        height="16"
        layout="topleft"
        left_pad="5"
        top_pad="-38"
        width="150" >
      </check_box>
      <check_box
        control_name="PlaySoundInventoryOffer"
        label="Inventory offer"
        name="inventory_offer"
        height="16"
        layout="topleft"
        top_pad="6"
        width="150" >
      </check_box>
    </panel>
  </tab_container>
</panel>
