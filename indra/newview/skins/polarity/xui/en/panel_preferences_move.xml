<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
  follows="left|top|right|bottom"
  height="485"
  label="Move"
  layout="topleft"
  left="102"
  name="move_panel"
  top="1"
  width="517">
  <scroll_container
    color="Transparent"
    follows="all"
    layout="topleft"
    left="0"
    mouse_opaque="false"
    name="move_view_scroll"
    opaque="true"
    top="0"
    bottom="-1"
    width="509">
    <panel
      follows="left|top|right"
      layout="topleft"
      left="0"
      mouse_opaque="false"
      name="move_view_scroll_panel"
      top="0"
      bottom="-1"
      width="495">
      <!-- Camera settings -->
      <panel
       bg_alpha_color="EmphasisColor_13"
       bg_visible="true"
       follows="left|top|right"
       height="22"
       layout="topleft"
       left="1"
       mouse_opaque="false"
       name="camera_ribbon"
       top_pad="5"
       width="530">
       <text
        follows="left|top"
        height="15"
        layout="topleft"
        left="5"
        name="camera_text"
        top_pad="5"
        width="300">
        Camera
      </text>
    </panel>
    <button
      auto_resize="true"
      height="25"
      label="Joystick and Flycam"
      left="355"
      width="135"
      name="joystick_setup_button"
      top_delta="30">
      <button.commit_callback
        function="Floater.Show"
        parameter="pref_joystick">
      </button.commit_callback>
    </button>
    <slider
      can_edit_text="true"
      control_name="CameraAngle"
      decimal_digits="2"
      follows="left|top"
      height="16"
      increment="0.025"
      initial_value="1.57"
      label="View angle"
      label_width="135"
      layout="topleft"
      left="10"
      max_val="2.92"
      min_val="0.10"
      top_delta="0"
      name="camera_fov"
      show_text="true"
      width="340">
    </slider>
    <slider
      can_edit_text="true"
      control_name="CameraOffsetScale"
      decimal_digits="2"
      follows="left|top"
      height="16"
      increment="0.025"
      initial_value="1"
      label="Distance"
      label_width="135"
      layout="topleft"
      left_delta="0"
      max_val="3"
      min_val="0.5"
      name="camera_offset_scale"
      show_text="true"
      top_pad="4"
      width="340">
    </slider>
    <slider
      can_edit_text="true"
      control_name="ZoomTime"
      decimal_digits="2"
      follows="left|top"
      height="16"
      increment="0.01"
      initial_value="1"
      label="Zoom Time"
      label_width="135"
      layout="topleft"
      left_delta="0"
      max_val="5"
      min_val="0.1"
      name="zoom_time"
      show_text="true"
      top_pad="4"
      width="340">
    </slider>
    <slider
      can_edit_text="true"
      control_name="CameraPositionSmoothing"
      decimal_digits="2"
      follows="left|top"
      height="16"
      increment="0.025"
      initial_value="1"
      label="Position Smoothing"
      label_width="135"
      layout="topleft"
      left_delta="0"
      max_val="5"
      min_val="0.2"
      name="camera_position_smoothing"
      show_text="true"
      top_pad="5"
      width="340">
    </slider>
    <text
      follows="left|top"
      type="string"
      length="1"
      height="10"
      left="15"
      name="heading2"
      width="125"
      top_pad="5">
      Move camera when
    </text>
    <check_box
     control_name="EditCameraMovement"
     height="20"
     follows="left|top"
     label="Building/Editing"
     layout="topleft"
     left_pad="5"
     name="edit_camera_movement"
     tool_tip="Use automatic camera positioning when entering and exiting edit mode"
     top_delta="-5"
     width="125" />
     <check_box
       control_name="PVCamera_ResetOnSelfClick"
       follows="left|top"
       height="20"
       label="Clicking my avatar"
       layout="topleft"
       left_pad="0"
       name="pvcamera_donotcenter"
       tool_tip="Do not center the camera when clicking your avatar.  Also called Mouse Steering."
       top_delta="0"
       width="125"/>
       <check_box
         control_name="PVMovement_ResetCamera"
         follows="left|top"
         height="20"
         label="Moving"
         layout="topleft"
         left_pad="10"
         name="pvcamera_donotcenter"
         tool_tip="Automatically reset the camera position when moving."
         top_delta="0"
         width="125"/>
         <text
          follows="left|top"
          type="string"
          length="1"
          height="10"
          left="15"
          name="heading2"
          width="125"
          top_pad="5">
          Move avatar when
        </text>
        <check_box
         control_name="PVMovement_RotateTowardSelection"
         follows="left|top"
         height="16"
         label="Building/Editing"
         layout="topleft"
         left_pad="5"
         name="pvmovement_rotate_toward_selection"
         tool_tip="Rotate your avatar toward what you are editing"
         top_delta="-2"
         width="130" />
         <check_box
           control_name="PVMovement_RotateOnSelfClick"
           enabled_control="PVCamera_ResetOnSelfClick"
           follows="left|top"
           height="16"
           label="Clicking my avatar"
           layout="topleft"
           left_pad="5"
           name="pvmovement_donotrotate"
           tool_tip="Rotate your avatar away from the camera when clicking it."
           top_delta="0"
           width="130" />
           <check_box
             control_name="AppearanceCameraMovement"
             follows="left|top"
             height="16"
             label="Editing Appearance"
             layout="topleft"
             left_pad="0"
             name="appearance_camera_movement"
             tool_tip="Use automatic camera positioning while in edit mode"
             top_delta="0"
             width="242" />
             <check_box
              control_name="PVCamera_RealisticMouseLook"
              follows="left|top"
              height="20"
              label="Realistic first-person camera movement"
              layout="topleft"
              left="5"
              name="realistic_mouselook"
              tool_tip="Make the camera follow avatar body movements and animations while in mouselook"
              top_pad="0"
              width="237">
            </check_box>
            <!-- Movement settings -->
            <panel
             bg_alpha_color="EmphasisColor_13"
             bg_visible="true"
             follows="left|top|right"
             height="22"
             layout="topleft"
             left="1"
             mouse_opaque="false"
             name="movement_ribbon"
             top_pad="5"
             width="550">
             <text
              follows="left|top"
              height="15"
              layout="topleft"
              left="5"
              name="movement_text"
              top_pad="5"
              width="300">
              Movement
            </text>
          </panel>
          <text
            follows="left|top"
            height="10"
            layout="topleft"
            length="1"
            name="single_click_action_lbl"
            right="-43"
            top_pad="0"
            type="string"
            width="125">
            Single click on land:
          </text>
          <combo_box
            height="23"
            layout="topleft"
            left_delta="0"
            name="single_click_action_combo"
            top_pad="5"
            width="165">
            <combo_box.item
              label="No action"
              name="0"
              value="0">
            </combo_box.item>
            <combo_box.item
              label="Move to clicked point"
              name="1"
              value="1"/>
              <combo_box.commit_callback
                function="Pref.ClickActionChange">
              </combo_box.commit_callback>
            </combo_box>
            <text
              follows="left|top"
              height="10"
              layout="topleft"
              length="1"
              name="double_click_action_lbl"
              right="-43"
              top_pad="0"
              type="string"
              width="126">
              Double click on land:
            </text>
            <combo_box
              height="23"
              layout="topleft"
              left_delta="0"
              top_pad="5"
              name="double_click_action_combo"
              width="165">
              <combo_box.item
                label="No action"
                name="0"
                value="0">
              </combo_box.item>
              <combo_box.item
                label="Move to clicked point"
                name="1"
                value="1">
              </combo_box.item>
              <combo_box.item
                label="Teleport to clicked point"
                name="2"
                value="2">
              </combo_box.item>
              <combo_box.commit_callback
                function="Pref.ClickActionChange">
              </combo_box.commit_callback>
            </combo_box>
            <check_box
              control_name="ArrowKeysAlwaysMove"
              follows="left|top"
              height="20"
              label="Arrow keys always move me"
              layout="topleft"
              left="5"
              name="arrow_keys_move_avatar_check"
              top_delta="-50"
              width="237">
            </check_box>
            <check_box
              control_name="PVChat_WASDMovesAvatar"
              follows="left|top"
              height="20"
              label="WASDECF keys moves avatar"
              layout="topleft"
              left_delta="0"
              name="arrow_keys_move_avatar_check"
              top_pad="0"
              tool_tip="WASD=Arrow Keys,E=PGUp, C=PGDown, F=Home"
              width="237">
            </check_box>
            <check_box
              control_name="PVMovement_NimbleAnimations"
              follows="left|top"
              height="20"
              label="Disable prejump and landing animations"
              layout="topleft"
              left_delta="0"
              name="nimble_animations"
              top_pad="0"
              width="237">
            </check_box>
            <check_box
              control_name="PVMovement_EnableMouseSteering"
              follows="left|top"
              height="20"
              label="Enable mouse steering"
              layout="topleft"
              left_delta="0"
              name="mouse_steering"
              tool_tip="This prevents turning around when clicking yourself"
              top_pad="0"
              width="237">
            </check_box>
            <check_box
              control_name="PVMovement_AutomaticFly"
              follows="left|top"
              height="20"
              label="Hold jump key to start flying"
              layout="topleft"
              left_delta="0"
              name="automatic_fly"
              top_pad="0"
              width="237">
            </check_box>
            <check_box
              control_name="PVMovement_AutomaticLand"
              follows="left|top"
              height="20"
              label="Land automatically when touching"
              layout="topleft"
              left_delta="0"
              name="automatic_land"
              top_pad="0"
              width="237">
            </check_box>
<!--     <check_box
      control_name="PVMovement_CrouchToggle"
      follows="left|top"
      height="20"
      label="Stay crouched (toggled mode)"
      layout="topleft"
      left_delta="0"
      name="crouch_toggle"
      top_pad="0"
      width="237">
    </check_box> -->
    <check_box
      control_name="AllowTapTapHoldRun"
      follows="left|top"
      height="20"
      label="Tap-tap-hold to run"
      layout="topleft"
      left_delta="0"
      name="tap_tap_hold_to_run"
      top_pad="0"
      width="237">
    </check_box>
    <check_box
      control_name="PVMovement_TurnAroundWhenWalkingBackward"
      follows="left|top"
      height="20"
      label="Turn around when walking backward"
      layout="topleft"
      left_delta="0"
      name="walk_backward"
      top_pad="0"
      width="237">
    </check_box>
    <!-- Mouse settings -->
    <panel
     bg_alpha_color="EmphasisColor_13"
     bg_visible="true"
     follows="left|top|right"
     height="22"
     layout="topleft"
     left="1"
     mouse_opaque="false"
     name="mouse_ribbon"
     top_pad="5"
     width="530">
     <text
      follows="left|top"
      height="15"
      layout="topleft"
      left="5"
      name="mouse_text"
      top_pad="5"
      width="300">
      Mouselook (First-Person view)
    </text>
  </panel>
  <check_box
    control_name="FirstPersonAvatarVisible"
    follows="left|top"
    height="20"
    label="Show me in Mouselook"
    layout="topleft"
    left_delta="5"
    name="first_person_avatar_visible"
    top_pad="5"
    width="150">
  </check_box>
  <check_box
    control_name="ShowCrosshairs"
    follows="left|top"
    height="20"
    label="Show crosshairs"
    layout="topleft"
    left_pad="10"
    name="show_crosshairs"
    top_delta="0"
    width="150">
  </check_box>
  <text
    type="string"
    length="1"
    follows="left|top"
    height="15"
    layout="topleft"
    left="10"
    name=" Mouse Sensitivity"
    top_pad="5"
    width="160"
    wrap="true">
    Mouse input sensitivity:
  </text>
  <slider
    control_name="MouseSensitivity"
    follows="left|top"
    height="15"
    initial_value="2"
    layout="topleft"
    show_text="false"
    left_pad="0"
    max_val="15"
    name="mouse_sensitivity"
    top_delta="-1"
    width="115">
  </slider>
  <check_box
    control_name="InvertMouse"
    height="16"
    label="Invert"
    layout="topleft"
    left_pad="2"
    name="invert_mouse"
    top_delta="0"
    width="128">
  </check_box>
  <check_box
    control_name="MouseSmooth"
    follows="left|top"
    height="20"
    label="Mouse input smoothing"
    layout="topleft"
    left="5"
    name="show_crosshairs"
    top_pad="0"
    width="150">
  </check_box>
</panel>
</scroll_container>
</panel>
