<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
	follows="all"
	height="570"
	label="Things"
	layout="topleft"
	min_height="450"
	min_width="240"
	name="objects panel"
	width="323">
	<panel
		 follows="all"
		 layout="topleft"
		 left="0"
		 name="sidepanel_inventory_panel"
		 top="0"
		 label=""
		 height="570"
		 visible="true"
		 default_tab_group="1"
		 width="330">
		 <layout_stack
			follows="left|right|top|bottom"
			layout="topleft"
			left="0"
			top="0"
		tab_group="1"
			orientation="vertical"
			name="inventory_layout_stack"
			height="535"
			width="330">
			 <layout_panel
				 name="main_inventory_layout_panel"
				 layout="topleft"
				 auto_resize="true"
				 user_resize="true"
				 min_dim="150"
				 width="330"
				 follows="bottom|left|right"
				 height="290">
				 <panel
					class="panel_main_inventory"
					filename="panel_main_inventory.xml"
					follows="all"
					layout="topleft"
					left="0"
					name="panel_main_inventory"
					top="0"
					label=""
					height="295"
					width="330" />
			 </layout_panel>
				<layout_panel
				 visibility_control="PVUI_ShowMarketplaceInboxPanel"
				 width="330"
				 layout="topleft"
				 auto_resize="false"
				 user_resize="true"
				 follows="left|right|top"
				 name="inbox_layout_panel"
				 visible="false"
				 min_dim="25"
				 expanded_min_dim="90"
				 height="225">
				 <panel
					follows="all"
					layout="topleft"
					left="0"
					name="marketplace_inbox"
					class="panel_marketplace_inbox"
					top="0"
					label=""
					height="225"
					width="330">
					 <string name="InboxLabelWithArg">[NUM] Received items</string>
					 <string name="InboxLabelNoArg">No Received items</string>
					 <button
						font="SansSerifMedium"
						control_name="InventoryInboxToggleState"
						follows="top|left|right"
						halign="left"
						handle_right_mouse="false"
						height="25"
						image_selected="MarketplaceBtn_Selected"
						image_unselected="MarketplaceBtn_Off"
						is_toggle="true"
						label="Received items"
						left="5"
						name="inbox_btn"
						pad_left="35"
						tab_stop="false"
						top="0"
						width="321"
						 />
					 <text
						type="string"
						length="1"
						follows="right|top"
						layout="topleft"
						height="13"
						top="5"
						right="-20"
						name="inbox_fresh_new_count"
						font="SansSerifMedium"
						halign="right"
						top_pad="0"
						width="300">
						[NUM] new
					 </text>
					 <panel
						name="inbox_inventory_placeholder_panel"
						follows="all"
						left="5"
						bottom="225"
						width="320"
						top="25"
						bg_opaque_color="InventoryBackgroundColor"
						background_visible="true"
						background_opaque="true"
						tool_tip="Drag and drop items to your inventory to use them"
						>
						<text
										 name="inbox_inventory_placeholder"
										 type="string"
										 follows="all"
										 layout="topleft"
										 top="0"
										 left="0"
										 width="321"
										 height="200"
										 wrap="true"
										 halign="center">
										 Purchases from the marketplace will be delivered here.
									</text>
					</panel>
				 </panel>
			 </layout_panel>
		 </layout_stack>
	</panel>
	<panel
		 follows="all"
		 layout="topleft"
		 left="0"
		 class="sidepanel_item_info"
		 filename="sidepanel_item_info.xml"
		 name="sidepanel__item_panel"
		 top="0"
		 label=""
		 height="540"
		 visible="false"
		 width="330">
	</panel>
	<panel
		 follows="all"
		 layout="topleft"
		 left="0"
		 class="sidepanel_task_info"
		 filename="sidepanel_task_info.xml"
		 name="sidepanel__task_panel"
		 top="0"
		 label=""
		 height="540"
		 visible="false"
		 width="330">
	</panel>
</panel>
