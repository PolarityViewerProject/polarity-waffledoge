<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="false"
 follows="top|left"
 height="570"
 label="My Avatar"
 layout="topleft"
 left="0"
 name="script_limits_my_avatar_panel"
 top="0"
 width="480">
    <text
     type="string"
     length="1"
     follows="left|top"
     height="16"
     layout="topleft"
     left="10"
     name="memory_used"
     top_pad="10"
     width="250">
     Memory used: 9001 Ki
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="16"
     layout="topleft"
     left_delta="0"
     name="urls_used"
     top_delta="14"
     top_pad="10"
     width="250">
      Memory used: 9001 Ki
    </text>
    <scroll_list
     draw_heading="true"
     follows="all"
     height="510"
     layout="topleft"
     left="5"
     multi_select="true"
     name="scripts_list"
     text_color="TextDefaultColor"
     top="60"
     width="470">
        <scroll_list.columns
         label="KB"
         name="size"
         width="50" />
        <scroll_list.columns
         label="URLs"
         name="urls"
         width="30" />
        <scroll_list.columns
         label="Object Name"
         name="name"
         width="240" />
        <scroll_list.columns
         label="Location"
         name="location"
         width="70" />
    </scroll_list>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="20"
     layout="topleft"
     top="60"
     top_delta="60"
     text_color="EmphasisColor"
     width="130">
        Retrieving information...
    </text>
    <button
     follows="top|left"
     height="19"
     label="Refresh List"
     layout="topleft"
     left="8"
     name="refresh_list_btn"
     top="40"
     width="80" />
</panel>
