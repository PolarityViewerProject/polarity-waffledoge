<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 default_tab_group="1"
 follows="all"
 height="428"
 label="Things"
 layout="topleft"
 min_height="300"
 min_width="240"
 name="main inventory panel"
 width="316">
 <panel.string
  name="Itemcount">
 </panel.string>
 <panel.string
  name="ItemcountFetching">
	Fetching [ITEM_COUNT]/? [FILTER]
 </panel.string>
 <panel.string
  name="ItemcountCompleted">
	[ITEM_COUNT] Items [FILTER]
 </panel.string>
 <panel.string
  name="ItemcountUnknown">

 </panel.string>
 <filter_editor
  text_pad_left="10"
  follows="left|top|right"
  height="23"
  label="Type here to begin keyword search..."
  layout="topleft"
  left="7"
  max_length_chars="300"
  name="inventory search editor"
  tool_tip="Type in one or more keywords to search for"
  top="0"
  width="230" />

 <combo_box
  name="filter_combo_box"
  width="120"
  height="25"
  left="200"
  top="32"
  follows="top|left"
  layout="topleft">

 <combo_box.item value="filter_type_all" label="All Types" />
 <combo_box.item value="filter_separator" label="------------" enabled="false" />
 <combo_box.item value="filter_type_animations" label="Animations" />
 <combo_box.item value="filter_type_calling_cards" label="Calling Cards" />
 <combo_box.item value="filter_type_clothing" label="Clothing / Body Parts" />
 <combo_box.item value="filter_type_gestures" label="Gestures" />
 <combo_box.item value="filter_type_landmarks" label="Landmarks" />
 <combo_box.item value="filter_type_notecards" label="Notecards" />
 <combo_box.item value="filter_type_objects" label="Objects" />
 <combo_box.item value="filter_type_scripts" label="Scripts" />
 <combo_box.item value="filter_type_sounds" label="Sounds" />
 <combo_box.item value="filter_type_textures" label="Textures" />
 <combo_box.item value="filter_type_snapshots" label="Snapshots" />
 <combo_box.item value="filter_type_meshes" label="Meshes" />
 <combo_box.item value="filter_separator" label="------------" enabled="false" />
 <combo_box.item value="filter_type_custom" label="Custom..." />

 </combo_box>

 <tab_container
	 follows="all"
	 halign="center"
	 height="365"
	 layout="topleft"
	 left="2"
	 name="inventory filter tabs"
	 tab_group="1"
	 open_tabs_on_drag_and_drop="true"
	 tab_position="top"
	 tab_min_width="60"
	 top_delta="1"
	 width="312">
	<inventory_panel
	 bg_opaque_color="DkGray2"
	 bg_alpha_color="DkGray2"
	 background_visible="true"
	 border="false"
	 bevel_style="none"
	 follows="all"
	 height="338"
	 label="Inventory"
	 help_topic="my_inventory_tab"
	 layout="topleft"
	 left="0"
	 name="All Items"
	 sort_order_setting="InventorySortOrder"
	 show_item_link_overlays="true"
	 top="16"
	 width="288" />
	<recent_inventory_panel
	 bg_opaque_color="DkGray2"
	 bg_alpha_color="DkGray2"
	 background_visible="true"
	 border="false"
	 bevel_style="none"
	 follows="all"
	 height="338"
	 label="Recent"
	 help_topic="recent_inventory_tab"
	 layout="topleft"
	 left_delta="0"
	 name="Recent Items"
	 show_item_link_overlays="true"
	 width="290" />
	<worn_inventory_panel
	 border="false"
	 bevel_style="none"
	 follows="all"
	 height="338"
	 label="Worn"
	 help_topic="worn_inventory_tab"
	 layout="topleft"
	 left_delta="0"
	 name="Worn Items"
	 show_item_link_overlays="true"
	 width="290" />
 </tab_container>
 <layout_stack
  animate="false"
  border_size="0"
  follows="left|right|bottom"
  height="25"
  layout="topleft"
  orientation="horizontal"
  top_pad="0"
  left="5"
  name="bottom_panel"
  width="308">
	<layout_panel
	 auto_resize="false"
	 height="25"
	 layout="topleft"
	 name="options_gear_btn_panel"
	 width="32">
		<menu_button
		 follows="bottom|left"
		 tool_tip="Show additional options"
		 height="25"
		 image_hover_unselected="Toolbar_Left_Over"
		 image_overlay="OptionsMenu_Off"
		 image_selected="Toolbar_Left_Selected"
		 image_unselected="Toolbar_Left_Off"
		 layout="topleft"
		 left="0"
		 name="options_gear_btn"
		 top="0"
		 width="31" />
	</layout_panel>
	<layout_panel
	 auto_resize="false"
	 height="25"
	 layout="topleft"
	 name="add_btn_panel"
	 width="32">
		<button
		 follows="bottom|left"
		 height="25"
		 image_hover_unselected="Toolbar_Middle_Over"
		 image_overlay="AddItem_Off"
		 image_selected="Toolbar_Middle_Selected"
		 image_unselected="Toolbar_Middle_Off"
		 layout="topleft"
		 left="0"
		 name="add_btn"
		 tool_tip="Add new item"
		 top="0"
		 width="31" />
	</layout_panel>
	<layout_panel
	 auto_resize="false"
	 height="25"
	 layout="topleft"
	 name="close_folder_btn_panel"
	 width="32">
		<button
		 follows="bottom|left"
		 height="25"
		 image_hover_unselected="Toolbar_Middle_Over"
		 image_overlay="Inv_FolderClosed"
		 image_selected="Toolbar_Middle_Selected"
		 image_unselected="Toolbar_Middle_Off"
		 layout="topleft"
		 left="0"
		 name="collapse_btn"
		 tool_tip="Close all folders"
		 top="0"
		 width="31">

		 </button>
	</layout_panel>
	<layout_panel
	 auto_resize="false"
	 height="25"
	 layout="topleft"
	 name="open_folder_btn_panel"
	 width="32">
		<button
		 follows="bottom|left"
		 height="25"
		 image_hover_unselected="Toolbar_Middle_Over"
		 image_overlay="Inv_FolderOpen"
		 image_selected="Toolbar_Middle_Selected"
		 image_unselected="Toolbar_Middle_Off"
		 layout="topleft"
		 left="0"
		 name="expand_btn"
		 tool_tip="Open all folders"
		 top="0"
		 width="31">
		 </button>
	</layout_panel>
	<layout_panel
	 auto_resize="false"
	 height="25"
	 layout="topleft"
	 name="show_inbox_ponel_btn_panel"
	 width="32">
		<button
		 follows="bottom|left"
		 height="25"
		 image_hover_unselected="Toolbar_Middle_Over"
		 image_overlay="Inv_InboxPanel_Off"
		 image_selected="Toolbar_Middle_Selected"
		 image_unselected="Toolbar_Middle_Off"
		 layout="topleft"
		 left="0"
		 name="toggle_inboxpanel_btn"
		 tool_tip="Toggle the Inbox panel"
		 top="0"
		 width="31">
		 <button.commit_callback
			 function="ToggleControl"
			 parameter="PVUI_ShowMarketplaceInboxPanel" />
		 </button>
	 </layout_panel>
	<layout_panel
	 auto_resize="true"
	 height="25"
	 layout="topleft"
	 name="dummy_panel"
	 width="212">
		 <text
		 type="string"
		 length="1"
		 follows="left|top"
		 height="13"
		 layout="topleft"
		 left="8"
		 name="ItemcountText"
		 font="SansSerifMedium"
		 text_color="EmphasisColorPale"
		 top_pad="5"
		 width="300">
		Items:
		</text>
		<icon
		 follows="bottom|left|right"
		 height="25"
		 image_name="Toolbar_Middle_Off"
		 layout="topleft"
		 left="0"
		 top="0"
		 name="dummy_icon"
		 width="211" />
	</layout_panel>
	<layout_panel
	 auto_resize="false"
	 height="25"
	 layout="topleft"
	 name="trash_btn_panel"
	 width="31">
		<dnd_button
		 follows="bottom|left"
		 height="25"
		 image_hover_unselected="Toolbar_Right_Over"
		 image_overlay="TrashItem_Off"
		 image_selected="Toolbar_Right_Selected"
		 image_unselected="Toolbar_Right_Off"
		 left="0"
		 layout="topleft"
		 name="trash_btn"
		 tool_tip="Remove selected item"
		 top="0"
		 width="31"/>
	</layout_panel>
 </layout_stack>
</panel>
