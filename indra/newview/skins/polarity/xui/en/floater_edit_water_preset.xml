<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 height="240"
 layout="topleft"
 name="Edit Water Preset"
 background_color="FloaterDefaultBackgroundColor"
 save_rect="true"
 title="Edit Water Preset"
 width="700">
<string name="title_new">
			Create a new Water Preset
</string>
<string name="title_edit">
			Edit Water Preset
</string>
<string name="title_neutral">
			Edit a Water Preset or create a new one.
</string>
<string name="combo_label">
			-Select a preset-
</string>
  <text
  follows="top|left|right"
  font="SansSerif"
  height="10"
  layout="topleft"
  left="10"
  name="label"
  top="33"
  width="120">
  	Water Presets:
  </text>
  <line_editor
	height="20"
	left_pad="0"
	name="water_preset_name"
	top="31"
	width="145" />
  <combo_box
  allow_text_entry="true"
  follows="top|left"
  layout="topleft"
  left_delta="0"
  max_chars="100"
  name="water_preset_combo"
  top="30"
  width="150"/>
	<button
	follows="bottom|right"
	height="23"
	label="Save"
	layout="topleft"
	left_pad="0"
	top_delta="0"
	name="save"
	width="70"/>
  <button
	 follows="bottom|right"
	 height="23"
	 label="Delete"
	 layout="topleft"
	 left_pad="3"
	 name="delete"
	 width="70"/>
  <button
	follows="bottom|right"
	height="23"
	label="Cancel"
	layout="topleft"
	left_pad="3"
	name="cancel"
	width="70"/>
  <button
	follows="top|left"
	height="23"
	label="Use this as my new water preset"
	layout="topleft"
	left_pad="3"
	is_toggle="true"
	name="make_default_cb"
	top_delta="0"
	width="185"/>
	 <tab_container
	 follows="left|top"
	 height="180"
	 halign="center"
	 left="0"
	 name="Object Info Tabs"
	 tab_position="top"
	 top="60"
	 width="700">
	 <panel
	 border="false"
	 bevel_style="none"
	 follows="left|top|right|bottom"
	 label="Settings"
	 layout="topleft"
	 height="180"
	 left="1"
	 mouse_opaque="false"
	 name="Settings"
	 top="0"
	 width="698">

<!--======== I conlumn of controls ========-->
  <text
	follows="left|top|right"
	height="10"
	font="SansSerif"
	layout="topleft"
	left="10"
	name="water_color_label"
	top="5"
	width="215">
	 Water Fog Color
  </text>
  <color_swatch
	can_apply_immediately="true"
	follows="left|top"
	height="37"
	label_height="0"
	layout="topleft"
	left_delta="15"
	name="WaterFogColor"
	top_pad="8"
	width="60" />


  <text
	follows="left|top|right"
	font="SansSerif"
	layout="topleft"
	left_delta="-15"
	top_pad="23"
	name="water_fog_density_label"
	width="215">
		Fog Density Exponent
  </text>
  <slider
	decimal_digits="1"
	follows="left|top"
	height="10"
	initial_value="0"
	layout="topleft"
	left_delta="13"
	max_val="10"
	name="WaterFogDensity"
	top_pad="8"
	width="200"/>


  <text
	follows="left|top|right"
	font="SansSerif"
	layout="topleft"
	left_delta="-13"
	top_pad="14"
	name="underwater_fog_modifier_label"
	width="215">
		Underwater Fog Modifier
  </text>
  <slider
	decimal_digits="2"
	follows="left|top"
	height="10"
	initial_value="0"
	layout="topleft"
	increment="0.01"
	left_delta="13"
	max_val="2"
	name="WaterUnderWaterFogMod"
	top_pad="7"
	width="200"/>

<!--======== II conlumn of controls ========-->

	<text
	 follows="left|top|right"
	 font="SansSerif"
	 height="10"
	 layout="topleft"
	 left="245"
	 name="BDensText"
	 top="5"
	 width="215">
		Reflection Wavelet Scale
	</text>
	<slider
	 control_name="WaterNormalScaleX"
	 decimal_digits="1"
	 follows="left|top"
	 initial_value="0.7"
	 layout="topleft"
	 label="1"
	 left_delta="0"
	 max_val="10"
	 name="WaterNormalScaleX"
	 top_pad="10"
	 width="200"/>
	<slider
	 control_name="WaterNormalScaleY"
	 decimal_digits="1"
	 follows="left|top"
	 label="2"
	 initial_value="0.7"
	 layout="topleft"
	 max_val="10"
	 name="WaterNormalScaleY"
	 top_pad="6"
	 width="200"/>
	<slider
	 control_name="WaterNormalScaleZ"
	 decimal_digits="1"
	 follows="left|top"
	 initial_value="0.7"
	 label="3"
	 layout="topleft"
	 max_val="10"
	 name="WaterNormalScaleZ"
	 top_pad="6"
	 width="200"/>


	<text
	 follows="left|top|right"
	 font="SansSerif"
	 layout="topleft"
	 left_delta="0"
	 name="HDText"
	 top_pad="15"
	 width="215">
		Fresnel Scale
	</text>
	<slider
	 control_name="WaterFresnelScale"
	 decimal_digits="2"
	 follows="left|top"
	 height="10"
	 increment="0.01"
	 initial_value="0.7"
	 layout="topleft"
	 left_delta="0"
	 name="WaterFresnelScale"
	 top_pad="9"
	 width="200"/>
	<text
	 follows="left|top|right"
	 font="SansSerif"
	 layout="topleft"
	 left_delta="0"
	 name="FresnelOffsetText"
	 top_pad="14"
	 width="215">
		Fresnel Offset
	</text>
	<slider
	 control_name="WaterFresnelOffset"
	 decimal_digits="2"
	 follows="top|left"
	 height="10"
	 increment="0.01"
	 initial_value="0.7"
	 layout="topleft"
	 left_delta="0"
	 name="WaterFresnelOffset"
	 top_pad="7"
	 width="200"/>

		 <text
	follows="left|top|right"
	font="SansSerif"
	height="16"
	layout="topleft"
	left_pad="35"
	name="DensMultText"
	top="5"
	width="215">
		 Refract Scale Above
	 </text>
	 <slider
	control_name="WaterScaleAbove"
	decimal_digits="2"
	follows="left|top"
	increment="0.01"
	initial_value="0.1"
	layout="topleft"
	left_delta="14"
	name="WaterScaleAbove"
	top_pad="5"
	width="200" />

	 <text
	type="string"
	length="1"
	follows="left|top|right"
	font="SansSerif"
	height="16"
	layout="topleft"
	left_delta="-14"
	name="WaterScaleBelowText"
	top_pad="10"
	width="215">
		 Refract Scale Below
	 </text>
	 <slider
	control_name="WaterScaleBelow"
	decimal_digits="2"
	follows="left|top"
	height="10"
	increment="0.01"
	initial_value="0"
	layout="topleft"
	left_delta="14"
	name="WaterScaleBelow"
	top_pad="2"
	width="200"/>

	 <text
	follows="left|top|right"
	font="SansSerif"
	height="16"
	layout="topleft"
	left_delta="-14"
	name="MaxAltText"
	top_pad="10"
	width="215">
		 Blur Multiplier
	 </text>
	 <slider
	control_name="WaterBlurMult"
	follows="left|top"
	height="10"
	increment="0.001"
	initial_value="0"
	layout="topleft"
	left_delta="14"
	max_val="0.16"
	name="WaterBlurMult"
	top_pad="2"
	width="200"/>

	</panel>
	 <panel
	 border="false"
	 follows="all"
	 label="Image"
	 layout="topleft"
	 mouse_opaque="false"
	 name="Image"
	 top="0"
	 width="300">


<!--======== III conlumn of contorls ========-->

	<text
	 follows="left|top|right"
	 font="SansSerif"
	 layout="topleft"
	 left="10"
	 name="BHText"
	 top_pad="5"
	 width="215">
		Big Wave Direction
	</text>
	<slider
	 control_name="WaterWave1DirX"
	 decimal_digits="2"
	 follows="left|top"
	 increment="0.01"
	 initial_value="0.7"
	 label="X"
	 layout="topleft"
	 max_val="4"
	 min_val="-4"
	 name="WaterWave1DirX"
	 top_pad="10"
	 width="210"/>
	<slider
	 control_name="WaterWave1DirY"
	 decimal_digits="2"
	 follows="left|top"
	 increment="0.01"
	 initial_value="0.7"
	 label="Y"
	 layout="topleft"
	 max_val="4"
	 min_val="-4"
	 name="WaterWave1DirY"
	 top_pad="5"
	 width="210"/>

		 <text
	follows="left|top|right"
	font="SansSerif"
	layout="topleft"
	left="10"
	name="BHText2"
	top_pad="15"
	width="215">
		 Little Wave Direction
	 </text>
	 <slider
	control_name="WaterWave2DirX"
	decimal_digits="2"
	follows="left|top"
	increment="0.01"
	initial_value="0.7"
	label="X"
	layout="topleft"
	max_val="4"
	min_val="-4"
	name="WaterWave2DirX"
	top_pad="10"
	width="210" />
	 <slider
	control_name="WaterWave2DirY"
	decimal_digits="2"
	follows="left|top"
	increment="0.01"
	initial_value="0.7"
	label="Y"
	layout="topleft"
	max_val="4"
	min_val="-4"
	name="WaterWave2DirY"
	top_pad="6"
	width="210" />

	<text
	 follows="left|top|right"
	 font="SansSerif"
	 height="16"
	 layout="topleft"
	 left_pad="15"
	 name="BHText3"
	 top="5"
	 width="215">
		Normal Map
	</text>
	<texture_picker
	 height="143"
	 layout="topleft"
	 left_delta="10"
	 name="WaterNormalMap"
	 top_pad="5"
	 width="128" />
	</panel>
<!--======== End of Controls panel ========-->
	 </tab_container>

 </floater>
